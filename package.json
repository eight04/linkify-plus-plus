{
  "name": "linkify-plus-plus",
  "description": "Based on Linkify Plus. Turn plain text URLs into links.",
  "version": "10.1.0",
  "repository": "eight04/linkify-plus-plus",
  "license": "BSD-3-Clause",
  "author": "eight04 <eight04@gmail.com>",
  "devDependencies": {
    "@rollup/plugin-inject": "^4.0.3",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "dataurl": "^0.1.0",
    "eslint": "^8.3.0",
    "rollup": "^2.60.2",
    "rollup-plugin-cjs-es": "^1.0.1",
    "rollup-plugin-copy-glob": "^0.3.2",
    "rollup-plugin-iife": "^0.5.0",
    "rollup-plugin-inline-js": "^0.5.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-write-output": "^0.1.1",
    "shx": "^0.3.3",
    "sync-version": "^1.0.1",
    "tiny-glob": "^0.2.9",
    "userscript-meta-cli": "^0.4.2",
    "web-ext": "^6.6.0"
  },
  "scripts": {
    "build": "sync-version src/static/manifest.json && shx rm -rf dist-extension/* && rollup -c && web-ext build",
    "build-git": "git archive --output web-ext-artifacts/source.zip master",
    "test": "eslint . --cache && web-ext lint",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push --follow-tags && npm run build-git",
    "start": "web-ext run"
  },
  "eslintIgnore": [
    "dist-extension",
    "dist"
  ],
  "userscript": {
    "name": "Linkify Plus Plus",
    "namespace": "eight04.blogspot.com",
    "include": "*",
    "exclude": [
      "https://www.google.*/search*",
      "https://www.google.*/webhp*",
      "https://music.google.com/*",
      "https://mail.google.com/*",
      "https://docs.google.com/*",
      "https://encrypted.google.com/*",
      "https://*101weiqi.com/*",
      "https://w3c*.github.io/*",
      "https://www.paypal.com/*",
      "https://term.ptt.cc/*",
      "https://mastodon.social/*"
    ],
    "grant": [
      "GM.getValue",
      "GM.setValue",
      "GM.deleteValue",
      "GM_addStyle",
      "GM_registerMenuCommand",
      "GM_getValue",
      "GM_setValue",
      "GM_deleteValue",
      "GM_addValueChangeListener",
      "unsafeWindow"
    ],
    "compatible": [
      "firefox Tampermonkey latest",
      "chrome Tampermonkey latest"
    ]
  },
  "private": true,
  "dependencies": {
    "event-lite": "^0.1.2",
    "gm-webext-pref": "^0.4.2",
    "linkify-plus-plus-core": "^0.5.3",
    "webext-dialog": "^0.1.1",
    "webext-pref": "^0.6.0",
    "webextension-polyfill": "^0.8.0"
  },
  "webExt": {
    "sourceDir": "dist-extension",
    "build": {
      "overwriteDest": true
    }
  }
}
