{
  "name": "linkify-plus-plus",
  "description": "Based on Linkify Plus. Turn plain text URLs into links.",
  "version": "8.2.2",
  "repository": "eight04/linkify-plus-plus",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "eslint": "^5.4.0",
    "glob": "^7.1.2",
    "rollup": "^0.64.1",
    "rollup-plugin-cjs-es": "^0.6.0",
    "rollup-plugin-external-globals": "^0.1.0",
    "rollup-plugin-inline-js": "^0.3.0",
    "rollup-plugin-json": "^3.0.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "shx": "^0.3.2",
    "sync-version": "^1.0.1",
    "userscript-meta-cli": "^0.4.2",
    "web-ext": "^2.8.0"
  },
  "scripts": {
    "build": "shx rm -rf extension/js && rollup -c && shx cp node_modules/event-lite/dist/event-lite.min.js extension/js/ && sync-version extension/manifest.json",
    "test": "eslint \"**/*.js\" --cache && web-ext lint",
    "preversion": "npm test",
    "version": "npm run build && git add .",
    "postversion": "git push --follow-tags",
    "start": "web-ext run"
  },
  "eslintIgnore": [
    "extension",
    "dist"
  ],
  "userscript": {
    "name": "Linkify Plus Plus",
    "namespace": "eight04.blogspot.com",
    "include": "*",
    "exclude": [
      "https://www.google.*/search*",
      "https://www.google.*/webhp*",
      "https://music.google.com/*",
      "https://mail.google.com/*",
      "https://docs.google.com/*",
      "https://encrypted.google.com/*",
      "http://mxr.mozilla.org/*",
      "http://w3c*.github.io/*"
    ],
    "require": [
      "https://greasyfork.org/scripts/27630-linkify-plus-plus-core/code/linkify-plus-plus-core.js?version=213494",
      "https://greasyfork.org/scripts/371339-gm-webextpref/code/GM_webextPref.js?version=621775"
    ],
    "grant": [
      "GM.getValue",
      "GM.setValue",
      "GM_addStyle",
      "GM_registerMenuCommand",
      "GM_getValue",
      "GM_setValue",
      "GM_addValueChangeListener",
      "unsafeWindow"
    ],
    "compatible": [
      "firefox Tampermonkey latest",
      "chrome Tampermonkey latest"
    ]
  },
  "private": true,
  "dependencies": {
    "event-lite": "^0.1.1",
    "linkify-plus-plus-core": "^0.3.0",
    "webext-pref": "^0.3.4"
  },
  "webExt": {
    "sourceDir": "extension"
  }
}
